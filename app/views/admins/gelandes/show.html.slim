.container
  .row
    .col-lg-12.text-center
      h3.title ゲレンデ詳細

      .row
        .col-lg-1
        .col-lg-10
          .row
            .col-lg-5.text-left
              .col-lg-4.float-left ゲレンデID
              .col-lg-2.float-left= @gelande.id
              .col-lg-2.float-left
                .btn.btn-outline-dark.btn-sm.disabled.m-0= @gelande.is_active ? "有効" : "無効"
              <br><br><br>

              = attachment_image_tag @gelande, :image, fallback: 'noimage.png', size: "350x250"

            .col-lg-7.text-left
              .col-lg-3.float-left ゲレンデ名
              .col-lg-12= @gelande.name
              <br>

              .col-lg-3.float-left コース数
              .d-inline-block= @gelande.count
              | 本
              <br><br>

              .col-lg-3.float-left 最大傾斜
              .d-inline-block= @gelande.slope 
              | 度
              <br><br>

              .col-lg-3.float-left 最長滑走距離
              .d-inline-block= @gelande.distance
              | m
              <br><br>
              .col-lg-3.float-left 住所
              .= @gelande.postal.to_s.insert(3, "-")
              .col-lg-3.float-left
              .col-lg-12= @gelande.address
              <br>

              .col-lg-3.float-left TEL
              .col-lg-8= @gelande.tel
              <br>

              .col-lg-3.float-left ホームページ
              .col-lg-12= auto_link(simple_format(h(@gelande.hp), {}, sanitize: false, wrapper_tag: "div"))
              <br><br>
          
      .row
        .col-lg-12
          .text-left.row
            .col-lg-1
            .col-lg-10 ゲレンデ紹介
            <br><br>
          .row.text-left
            .col-lg-1
            .col-lg-10= @gelande.introduction
          <br><br>
          .text-center
            = link_to "編集する", edit_admins_gelande_path(@gelande), class: "btn btn-outline-secondary btn-sm"

.mb-5