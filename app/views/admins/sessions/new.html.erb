<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center frame-devise mt-5 p-5">
      <h2 class="en">Log in</h2><br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "col-lg-4 text-left" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-5" %>
        </div><br>

        <div class="field">
          <%= f.label :password, class: "col-lg-4 text-left" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-5" %>
        </div><br>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-outline-secondary list btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>