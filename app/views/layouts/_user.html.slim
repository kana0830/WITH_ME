  / ＝＝＝＝＝⭐︎ロゴ⭐︎＝＝＝＝＝
  body
    header.sticky-top
      .navbar.clearfix
        .nav.navbar-nav.mr-auto.bar-left
          = link_to root_path do
            = image_tag 'logo.jpg', :size => '300x150'



        / ＝＝＝＝＝⭐︎ナビバー⭐︎＝＝＝＝＝
        .nav.navbar-nav.bar-right
          ul.box-1



            / ＝＝＝＝＝⭐︎ユーザーログイン後⭐︎＝＝＝＝＝
            - if user_signed_in?
              li.btn.btn-light= link_to user_path(current_user), class: 'list' do
                i.fas.fa-home
                |  mypage
              li.font-weight-bold.btn.btn-light= link_to new_user_registration_path, class: 'list' do
                i.fas.fa-bell
                |  通知
              li.font-weight-bold.btn.btn-light= link_to new_user_session_path, class: 'list' do
                i.fas.fa-users
                |  仲間を探す
              li.font-weight-bold.btn.btn-light= link_to new_user_session_path, class: 'list' do
                i.fas.fa-comment-alt
                |  投稿
              li.font-weight-bold.btn.btn-light= link_to new_user_session_path, class: 'list' do
                i.fas.fa-mountain
                |  ゲレンデ
              li.btn.btn-light= link_to destroy_user_session_path, method: :delete, class: 'list' do
                i.fas.fa-sign-out-alt
                |  logout



            / ＝＝＝＝＝⭐︎ユーザーログイン前⭐︎＝＝＝＝＝
            - else
              li.btn.btn-light= link_to about_path, class: 'list' do
                i.fas.fa-address-card
                |  about
              li.btn.btn-light= link_to new_user_registration_path, class: 'list' do
                i.fas.fa-user-plus
                |  sign up
              li.btn.btn-light= link_to new_user_session_path, class: 'list' do
                i.fas.fa-sign-in-alt
                |  login
              li.btn.btn-light= link_to new_user_session_path, class: 'list' do
                i.fas.fa-key
                |  guest



    / ＝＝＝＝＝⭐︎メイン⭐︎＝＝＝＝＝
    main
      .container
        / フラッシュメッセージ
        p.text-center.notice= notice
        p.text-center.alert= alert

        = yield



