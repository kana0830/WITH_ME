<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 text-center frame-devise">
      <h2 class="devise-title">Log in</h2><br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "col-lg-4 text-left" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-5" %>
        </div><br>

        <div class="field">
          <%= f.label :password, class: "col-lg-4 text-left" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-5" %>
        </div><br>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-outline-secondary list btn-sm" %>
        </div>
      <% end %>


      <p class="devise-text">まだ登録がお済みでない方</p>
      <%= link_to "新規登録", new_user_registration_path, class: "devise-button font-weight-bold btn btn-outline-secondary list btn-sm" %>

    </div>
  </div>
</div>